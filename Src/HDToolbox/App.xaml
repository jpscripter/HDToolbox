<Window x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp1"
    mc:Ignorable="d"
    Title="Help Desk Toolbox" Height="800" Width="800">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF6A5ACD" Offset="0.0" />
                        <GradientStop Color="#FF836FFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Width" Value="150" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="15" Name="border">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FF836FFF" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#FF6A5ACD" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Define the Menu -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="_File">
                <!-- Submenu under Open -->
                <MenuItem Header="_Open">
                    <MenuItem Header="_Log" Name="OpenLog" />
                    <MenuItem Header="_Script" Name="OpenScript" />
                    <MenuItem Header="_Config" Name="OpenConfig" />
                </MenuItem>
                <MenuItem Header="_Gather" Name="GatherHdt" />
                <Separator />
                <MenuItem Header="E_xit" Name="ExitHdt" />
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Name="About" />
            </MenuItem>
        </Menu>

        <!-- Banner -->
<Border Name="Banner" Background="#2C3E50" Height="60" VerticalAlignment="Top"
        HorizontalAlignment="Stretch" Margin="0,20" CornerRadius="10">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <!-- Company Icon -->
        <Image Name="CompanyIcon" Source="path/to/icon.png" Height="40" VerticalAlignment="Center"
               HorizontalAlignment="Left" Margin="15,0" Grid.Column="0" />

        <!-- Company Name -->
        <TextBlock Name="CompanyName" Text="My Company" FontSize="26" FontWeight="Bold"
                   VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"
                   Margin="15,0" Grid.Column="1" />

        <!-- Configuration Section -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right"
                    Grid.Column="2" Margin="15,0">
            <TextBlock Text="Configs:" VerticalAlignment="Center" FontSize="16" Foreground="White"
                       Margin="0,0,5,0" />
            <ComboBox Name="ConfigSelector" Width="150" VerticalAlignment="Center" 
                      HorizontalAlignment="Right" />
        </StackPanel>
    </Grid>
</Border>

        <!-- Main Content -->
        <Grid Name="GridRows" Margin="0,75,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Name="VariableGridRow" Height="Auto" />   <!-- VariablesExpander row -->
                <RowDefinition Name="LogGridRow" Height="*" />           <!-- LogsExpander row (remaining
                space) -->
                <RowDefinition Name="ButtonGridRow" Height="Auto" />     <!-- Button row -->
            </Grid.RowDefinitions>

            <!-- Variables Expander -->
            <Expander Name="VariablesExpander" HorizontalAlignment="Stretch" Header="Variables"
                VerticalAlignment="Stretch" Margin="5" FontFamily="Arial" FontSize="18"
                IsExpanded="True" Background="LightGray" Grid.Row="0">
                <DataGrid Name="Variables" IsReadOnly="False" FontSize="12"
                    AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="VariableName" Binding="{Binding VariableName}"
                            Width="220" FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="350"
                            FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="200"
                            FontFamily="Verdana" FontSize="12" />
                    </DataGrid.Columns>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="VariableNew" Header="Add" />
                            <MenuItem Name="VariableCopy" Header="Copy" />
                            <MenuItem Name="VariableDelete" Header="Delete" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Expander>

            <!-- Logs Expander -->
            <Expander Name="LogsExpander" Header="Logs" Margin="5" FontFamily="Arial" FontSize="18"
                IsExpanded="True" Background="LightGray" Grid.Row="1">
                <DataGrid Name="Logs" GridLinesVisibility="none" IsReadOnly="True"
                    SelectionMode="Single" FontSize="12" AutoGenerateColumns="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="300"
                            FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="DateTime" Binding="{Binding Datetime}"
                            Width="200" FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="severity" Binding="{Binding severity}"
                            Width="100" FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="100"
                            FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Component" Binding="{Binding Component}"
                            Width="100" FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Details" Binding="{Binding details}" Width="200"
                            FontFamily="Verdana" FontSize="12" />
                        <DataGridTextColumn Header="Thread" Binding="{Binding thread}" Width="50"
                            FontFamily="Verdana" FontSize="12" />
                    </DataGrid.Columns>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <!-- Change row background color if Status is 'Error' -->
                                <DataTrigger Binding="{Binding severity}" Value="Error">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding severity}" Value="Warning">
                                    <Setter Property="Background" Value="Yellow" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Expander>

            <!-- Button -->


            <Button Name="GatherLogs" Content="Gather Logs" Style="{StaticResource ModernButton}"
                Grid.Row="2" />

            <!-- Template Expander -->
            <Expander Name="TemplateExpander" Header="Template" Margin="5" IsExpanded="false"
                FontFamily="Arial" FontSize="18" Visibility="Hidden" Background="LightGray">
                <DataGrid Name="Template" IsReadOnly="True" SelectionMode="Extended" FontSize="12"
                    AutoGenerateColumns="false">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="TemplateExecute" Header="Execute" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <!-- Change row background color if Status is 'Error' -->
                                <DataTrigger Binding="{Binding State}" Value="Error">
                                    <Setter Property="Background" Value="Red" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding State}" Value="Warning">
                                    <Setter Property="Background" Value="Yellow" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding State}" Value="Running">
                                    <Setter Property="Background" Value="LightBlue" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </Expander>
        </Grid>
    </Grid>
</Window>